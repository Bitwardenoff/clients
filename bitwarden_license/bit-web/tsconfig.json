{
  "extends": "./jslib/shared/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "tldjs": ["jslib/common/src/misc/tldjs.noop"],
      "jslib-common/*": ["jslib/common/src/*"],
      "jslib-angular/*": ["jslib/angular/src/*"],
      "@bitwarden/components": ["jslib/components/src"],
      "src/*": ["../../apps/web/src/*"]
    }
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": true
  },
  "files": [
    "../../apps/web/src/app/polyfills.ts",
    "../../apps/web/src/app/main.ts",
    "src/app/main.ts"
  ],
  "include": [
    "src/connectors/*.ts",
    "src/models/*.ts",
    "src/services/*.ts",
    "src/abstractions/*.ts"
  ]
}
